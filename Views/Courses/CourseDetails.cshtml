    <input type="hidden" id="hiddenCourseId" value="@Model.Course.Id" />
    <section class="course-header-area">
        <div class="container">
            <div class="row align-items-end">
                <div class="col-lg-4"></div><div class="col-lg-8" style="direction: rtl;">
                    <div class="course-header-wrap">
                        <h1 class="title">
                            @Model.Course.CourseName
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="~/Courses/Edit/@Model.Course.Id?ReturnToCoursePage=true"><i class="fa fa-edit"></i></a>
                            }
                        </h1>
                        @if (Model.Course.Code != null)
                        {
                            <div>
                                كود الدورة:
                                @Model.Course.Code
                            </div>
                        }


                        <div class="rating-row">

                            <img src="~/images/Stars/@(String.Format("{0:0.0}",Model.Course.Review)).png" style="width:81px" />
                            <span>(@Model.Course.CountReviewers  Reviews)</span>

                            <span class="comment"><i class="fas fa-comment"></i>الدورة باللغة العربية</span>
                        </div>

                        @if (Model.Course.Duration1 != null || Model.Course.Duration2 != null)
                        {
                            <div class="created-row">

                                <i class="far fa-list-alt text-14px"></i>
                                <span class="text-12px" style="margin-right: 5px;">
                                    @Model.Course.Duration1
                                    @if (Model.Course.Duration2 != null)
                                    {<span>(@Model.Course.Duration2)</span>}
                                    
                                </span>
                                <br>
                                @functions {
                                    public static string FlagPath(string path)
                                    {
                                        return path.Replace("~/", "../../");
                                    }

                                }


                            </div>
                        }


                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="course-content-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="course-sidebar natural" style="top: auto; z-index: 8;@(Model.Course.CourseImageUrl == null?"margin-top:25px":"")">
                        <div class="preview-video-box">
                            <a data-bs-toggle="modal">
                                @if (@Model.Course.CourseImageUrl != null)
                                {
                                    <img src="~/images/Courses/@Model.Course.CourseImageUrl" alt="@Model.Course.CourseName" class="w-100">
                                }

                            </a>
                        </div>
                        <div class="course-sidebar-text-box">

                            <!-- WISHLIST BUTTON -->
                            <div class="buy-btns">
                                <a class="btn btn-add-wishlist" id="btnNotify" data-bs-toggle="modal" data-bs-target="#modalBtnNotify">

                                    <i class="@(Model.Events.Count==0?"fa fa-clock":"fa fa-comments")" style="margin: 0 7px;font-size: 20px;"></i>
                                    @if (Model.Events.Count == 0)
                                    {
                                        <span> التنبيه بأقرب موعد للإنعقاد</span>
                                    }
                                    else
                                    {
                                        <span> تواصل معنا بخصوص الدورة</span>
                                    }

                                </a>
                            </div>

                            <div class="buy-btns">

                            </div>


                        </div>
                    </div>
                </div>
                <div class="col-lg-8 radius-10 mt-4 bg-white p-30-40" style="direction: rtl;">
                    @if (Model.Course.Description != null)
                    {
                        <div class="description-box view-more-parent expanded" style="padding-bottom:10px; border-bottom:1px solid lightgray;margin-bottom:25px;direction:@Model.Course.DescriptionDirection">

                            @Html.Raw(Model.Course.Description)
                        </div>
                    }
                    @if (Model.Events.Count > 0)
                    {
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr style="background-color:dimgray;color:white">
                                    <th>التاريخ</th>
                                    <th>محل الانعقاد</th>
                                    <th>ملاحظات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (BrAcademy.Data.Event ev in Model.Events)
                                {


                                    <tr>
                                        <td>
                                            @if (ev.DisplayShortenedDate)
                                            {
                                                <span style="margin-right:12px"> @BrAcademy.Data.TransferDate.ToArabicDateShortened(ev.StartDate)</span>
                                            }
                                            else
                                            {
                                                @BrAcademy.Data.TransferDate.ToArabicDate(ev.StartDate)
                                            }
                                        </td>
                                        <td>
                                            <img src="@FlagPath(ev.Country.FlagURL)" style="height:20px;" />
                                            @ev.Country.CountryNameEnglish
                                        </td>
                                        <td>
                                            @if (ev.Description != null)
                                            {
                                                <span> @ev.Description</span>
                                            }
                                            else
                                            {
                                                <span>
                                                    ----------------------
                                                </span>
                                            }
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>

                    }

                    @if (Model.RelatedCourses.Count > 0)
                    {
                        <div>
                            <div style="background-color: #444444; direction: rtl; color: white; height: 50px; padding: 8px;">
                                <h4>دورات ذات صلة</h4>
                            </div>
                            <div class="row" style="direction:rtl">
                                @foreach (BrAcademy.Data.Course RelCourse in Model.RelatedCourses)
                                {
                                <div class="col-12 col-sm-6">
                                    <a asp-action="CourseDetails" asp-route-id="@RelCourse.Id" asp-controller="Courses" style="vertical-align:top">
                                        <div  style="padding:5px;display:inline-block" class="hyperCategory">
                                            <div class="divRelCourse" style="border:1px solid lightgray;border-radius:5px;padding:5px">
                                                <div class="divCourseText" style="display: inline-block; @(RelCourse.CourseImageUrl!=null?"width: 67%":"width:100%"); color: #4e4e4e">
                                                    <h5>
                                                        @RelCourse.CourseName
                                                    </h5>

                                                </div>
                                                @if (RelCourse.CourseImageUrl != null)
                                                {
                                                    <div class="divCourseimage" style="display:inline-block;width:30%;padding:5px;vertical-align:top">
                                                        <div style="border:1px solid lightgray;padding:3px">
                                                            <img src="~/images/Courses/@RelCourse.CourseImageUrl" alt="@RelCourse.CourseName" style="width:100%" />
                                                        </div>

                                                    </div>
                                                }


                                            </div>
                                        </div>
                                    </a>
                                </div>
                                }
                            </div>
                        </div>
                    }




                </div>




            </div>
        </div>
    </section>

    <!-- Modal -->
    <div class="modal fade" id="modalBtnNotify" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <a id="btnClose" style="cursor:pointer">
                        <span aria-hidden="true">&times;</span>
                    </a>
                </div>
                <div class="modal-body" dir="rtl" id="divUserData">
                    <div class="form-group">
                        <label class="control-label">الاسم بالكامل*</label>
                        <input id="Name" type="text" name="Name" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label class="control-label">رقم الهاتف*</label>
                        <input type="tel" id="PhoneNumber" class="form-control" placeholder="شاملا كود الدولة" />

                    </div>
                    <div class="form-group">
                        <label class="control-label">البريد الإلكتروني*</label>
                        <input id="Email" type="email" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label class="control-label">جهة العمل*</label>
                        <input id="WorksAt" type="text" class="form-control" />

                    </div>
                    <div class="form-group">
                        <label class="control-label">هل لديك استفسار؟</label>
                        <textarea id="Question" style="width:100%" class="form-control"></textarea>

                    </div>
                    <input type="hidden" id="hiddenVisitorId" value="0" />
                </div>
                <div class="modal-footer">
                    <button id="btnClose2" type="button" class="btn btn-secondary" data-dismiss="modal">إلغاء</button>
                    <button type="button" class="btn btn-primary" id="btnSendData">إرسال</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->

    <style media="screen">
        .embed-responsive-16by9::before {
            padding-top: 0px;
        }
    </style>
    <footer class="footer-area d-print-none bg-gray mt-5">
        <div class="container-xl">

        </div>
        <section class="border-top">
        </section>
    </footer>

</div>
