                        <h4 class="owlTextMobile d-sm-none">@BrAcademy.Data.AppCodes.CategoryNameById(db, (int)item.CategoryId)</h4>
                    </a>

                </div>

            }
            else
            {
                <div style="position:relative;text-align:center;">
                    <a href="~/Courses/CourseDetails/@item.CourseId">
