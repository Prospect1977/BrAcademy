    <section class="course-header-area" style="padding:10px 0">
        <div class="container">
            <div class="row align-items-end">
                <div class="col-lg-4"></div><div class="col-lg-8" style="direction: rtl;">
                    <div class="course-header-wrap">
                        <h1 class="title" style="position: relative; top: 10px; color: white; text-align: right;">
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="~/CourseCategories/Edit/@Model.CourseCategory.Id?ReturnToCategoryPage=true">
                                    <i class="fa fa-edit"></i>
                                </a>
                            }
                            @Model.CourseCategory.CategoryName
                        </h1>

                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="course-content-area">
        @if (Model.CourseCategory.CategoryWideImageUrl != null)
        {
            <div class="container" style="padding:0">
                <img style="width:100%" src="~/images/Categories/Wide/@Model.CourseCategory.CategoryWideImageUrl" />
            </div>
        }

        <div class="container @(Model.CourseCategory.CategoryWideImageUrl != null? "shift24":"")" style="position:relative;">
            <div class="row" dir="rtl" style="background-color:white">
                <div id="NavigationSideBar" class="col-lg-3 d-none d-sm-block">
                    <nav id="sidebar">

                        <ul class="list-unstyled components mb-5">
                            @foreach (var cat in Model.OtherCategories)
                            {

                                <li class="liCategory @(cat.Id==Model.CourseCategory.Id?"active":"")">
                                    <a href="~/CourseCategories/CategoryDetails/@cat.Id"> @cat.CategoryName</a>
                                </li>
                            }
                        </ul>

                    </nav>
                </div>
                <div class="col-lg-9 mt-4 bg-white p-30-40" style="direction: rtl;padding-top:0">
                    <div class="row">
                        @foreach (var Course in Model.Courses)
                        {


                            <div class="course-box-wrap slick-active col-sm-6 col-md-4" tabindex="0" data-slick-index="3" aria-hidden="false">
                                <a asp-action="CourseDetails" asp-controller="Courses" asp-route-id="@Course.Id">
                                    <div class="course-box">
                                        
                                        <div class="course-image" style="text-align:center">
                                            @if (@Course.CourseImageUrl != null)
                                            {
                                                <img src="~/images/Courses/@Course.CourseImageUrl" alt="@Course.CourseName" asp-append-version="true" class="img-fluid">
                                               
                                            }
                                            else
                                            {
                                                <img src="~/images/Course.png"  asp-append-version="true" class="img-fluid">
                                            }

                                        </div>
                                      

                                        <div class="course-details">
                                            @*@if (@Course.CourseImageUrl != null)
                                                {*@
                                            <h5 class="title" style="text-align: right;">@Course.CourseName</h5>
                                            @*}
                                                else
                                                {
                                                    <div style="height:283px">
                                                        <h2 class="title" style="text-align: right;">@Course.CourseName</h2>
                                                    </div>
                                                }*@

                                            <div class="rating" style="text-align: right;">
                                                <img class="imgRate" src="~/images/Stars/@(String.Format("{0:0.0}", Course.Review)).png" style="width:83px" />


                                                <div class="d-inline-block" style="float: left;">
                                                    <span class="text-dark ms-1 text-15px" style="float: right;">@(String.Format("{0:0.0}", Course.Review))</span>
                                                    <span class="text-dark text-12px text-muted ms-2">(@Course.CountReviewers Reviews)</span>
                                                </div>
                                            </div>
                                            <div class="d-flex text-dark" style="direction: rtl;">
                                                <div class="">
                                                    @if (@Course.Duration1 != null)
                                                    {
                                                        <i class="far fa-clock text-14px"></i>
                                                        <span class="text-muted text-12px">@Course.Duration1</span>
                                                    }

                                                </div>
                                                <div class="ms-3">
                                                    @if (@Course.Duration2 != null)
                                                    {
                                                        <i class="far fa-list-alt text-14px" style="margin-right: 15px;"></i>
                                                    <span class="text-muted text-12px">@Course.Duration2</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>



    <style media="screen">
        .embed-responsive-16by9::before {
            padding-top: 0px;
        }
    </style>

    <footer class="footer-area d-print-none bg-gray mt-5">

        <section>
        </section>
    </footer>
</div>
