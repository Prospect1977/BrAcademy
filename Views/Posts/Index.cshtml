@model IEnumerable<BrAcademy.Data.Post>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Course)
                </th>
                <th>
                    
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PublishDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataDate)
                </th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="../../Courses/CourseDetails/@item.CourseId">


                            @Html.DisplayFor(modelItem => item.Course.CourseName)
                        </a>
                    </td>
                    <td>
                        <span class="Description">
                            @Html.Raw(@item.Description)
                           
                        </span>
                    </td>
                    <td>
                        @item.PublishDate.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                       @item.DataDate?.ToString("dd/MM/yyyy")
                    </td>
                   
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        shortenTextAdvanced('.Description', 50);
        </script>
}