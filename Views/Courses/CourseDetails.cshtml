    <script type="text/javascript">
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>

    <script type="text/javascript">
        $(function () {
            var URL = 'https://extreme-ip-lookup.com/json/?key=d4vbtcnOMkQ5us9s3qpL';
            var userData = "";
            $.getJSON(URL, function (data) {
                userData = data;
                console.log(userData);
            });
            $("#btnNotify").click(function () {
                $("#modalBtnNotify").modal({ keyboard: false, backdrop: "static" });
            });
            $("#btnClose,#btnClose2").click(function () {
                $("#modalBtnNotify").modal("hide");
            });
            if (parseInt($.cookie("Id")) > 0) {
                $("#hiddenVisitorId").val($.cookie("Id"));
                console.log($.cookie("Id"));
                $.get("../../Courses/GetUserData", { VisitorId: $("#hiddenVisitorId").val() }, function (Visitor) {
                    var v = $.parseJSON(Visitor);
                    $("#Name").val(v.Name);
                    $("#PhoneNumber").val(v.PhoneNumber);
                    $("#Email").val(v.Email);
                    $("#WorksAt").val(v.WorksAt);
                });
            }
            $("#btnSendData").click(function () {

                var Ccode = userData.countryCode;
                ValidateEmpty("#Name", "Full Name");
                ValidateEmpty("#PhoneNumber", "Phone Number");
                ValidateEmpty("#Email", "Email");
                ValidateEmpty("#WorksAt", "Works at");
                PleaseWait("show");
                if ($('#divUserData').find('.validator').length > 0) {
                    return false;
                }
                $.post("../../Courses/SaveUserData", {
                    VisitorId: $("#hiddenVisitorId").val(), CourseId: $("#hiddenCourseId").val(),
                    CountryCode: Ccode, Name: $("#Name").val(), PhoneNumber: $("#PhoneNumber").val(), Email: $("#Email").val(),
                    WorksAt: $("#WorksAt").val(), Question: $("#Question").val()
                }, function (VisitorId) {
                    $.cookie("Id", VisitorId);
                    alert("Your Message has been sent successfully and we will contact you soon!");
                    PleaseWait("hide");
                    $("#modalBtnNotify").modal("hide");
                });
            });
        });
        function isTouchDevice() {
            return "ontouchstart" in window || navigator.maxTouchPoints > 0 || navigator.msMaxTouchPoints > 0;
        }

        function viewMore(element, visibility) {
            if (visibility == "hide") {
                $(element).parent(".view-more-parent").addClass("expanded");
                $(element).remove();
            } else if ($(element).hasClass("view-more")) {
                $(element).parent(".view-more-parent").addClass("expanded has-hide");
                $(element).removeClass("view-more").addClass("view-less").html("- View less");
            } else if ($(element).hasClass("view-less")) {
                $(element).parent(".view-more-parent").removeClass("expanded has-hide");
                $(element).removeClass("view-less").addClass("view-more").html("+ View more");
            }
        }

        //Event call after loading page
        document.addEventListener(
            "DOMContentLoaded",
            function () {
                setTimeout(function () {
                    $(".animated-loader").hide();
                    $(".shown-after-loading").show();
                });
            },
            false
        );


    </script>
}








