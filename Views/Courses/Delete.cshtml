@using System.Web;
@model BrAcademy.Data.Course

@{
    ViewData["Title"] = "Delete";
}
<div class="container" style="background-color:white">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Course</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                <div>
                    @Html.Raw(HttpUtility.HtmlDecode(@Model.Description))
                </div>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseCategory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseCategory.CategoryName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Duration1)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Duration1)
            </dd>
<dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Duration2)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Duration2)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseImageUrl)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseImageUrl)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CountReviewers)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CountReviewers)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="CoursesAdmin">Back to List</a>
        </form>
    </div>
</div>