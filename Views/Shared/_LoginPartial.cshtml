@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav" style="position:absolute;right:3%">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item user">
            <a class="nav-link text-dark" style="width: 400px;text-align: right;" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello <b>@User.Identity.Name</b>!</a>
    </li>
    <li class="nav-item user">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
    </li>
}
else
{
    @*<li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>*@
    <li class="nav-item user">
        <a class="btn btn-outline-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
