            if (item.CategoryId != null)
            {
                <div style="position:relative;text-align:center;">
                    <a href="~/CourseCategories/CategoryDetails/@item.CategoryId">
                        <img class="imgOwl" src="~/images/Categories/@BrAcademy.Data.AppCodes.GetCategoryImage(db,(int)item.CategoryId)" asp-append-version="true" />
