@using System.Web;
@model BrAcademy.Data.Course

@{
    ViewData["Title"] = "Details";
}
<div class="container" style="background-color:white">
    <h1>Details</h1>

    <div>
        <h4>Course</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">


                <div id="ff" style="">
                    @Html.Raw(HttpUtility.HtmlDecode(@Model.Description))
                </div>
                @*@Html.DisplayFor(model => model.Description)*@
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseCategory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseCategory.CategoryName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Duration1)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Duration1)
            </dd>
<dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Duration2)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Duration2)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CourseImageUrl)
            </dt>
            <dd class="col-sm-10">
                @* @Html.DisplayFor(model => model.CourseImageUrl)*@



            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Review)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Review)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CountReviewers)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CountReviewers)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> | <a asp-action="CourseEvents" asp-controller="Events" asp-route-id="@Model.Id" >Events</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts{

    <script type="text/javascript">
        $(function () {
            $("#spanDescription").html($("#hiddenSpanDescription").text());
        });

    </script>
}

