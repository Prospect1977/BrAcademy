    <section class="course-header-area">
        <div class="container">
            <div class="row align-items-end">
                <div class="col-lg-4"></div><div class="col-lg-8" style="direction: rtl;">
                    <div class="course-header-wrap">
                        <h1 class="title">@Model.Course.CourseName</h1>

                        <div class="rating-row">

                            <img src="~/images/Stars/@(String.Format("{0:0.0}",Model.Course.Review)).png" style="width:81px" />
                            <span>(@Model.Course.CountReviewers  Reviews)</span>

                            <span class="comment"><i class="fas fa-comment"></i>الدورة باللغة العربية</span>
                        </div>
                        <div class="created-row">

                            <i class="far fa-list-alt text-14px"></i>
                            <span class="text-12px" style="margin-right: 5px;"> @Model.Course.Duration1 (@Model.Course.Duration2)</span>
                            <br>

                            @if (Model.Events.Count > 0)
                            {
                                <i class="far fa-clock text-14px"></i>
                                <span>                            اقرب موعد للإنعقاد:</span>
                                <ul style="list-style:none;display:inline-block">
                                    @foreach (BrAcademy.Data.Event ev in Model.Events)
                                    {
                                        <li>
                                            <span class="last-updated-date d-inline-block mt-2" style="margin-right: 5px;">
                                                @(BrAcademy.Data.TransferDate.ToArabicDate(ev.StartDate))
                                            </span>
                                        </li>
                                    }

                                </ul>
                            }

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <section class="course-content-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="course-sidebar natural" style="top: auto; z-index: 8;">
                        <div class="preview-video-box">
                            <a data-bs-toggle="modal">
                                <img src="~/images/Courses/@Model.Course.CourseImageUrl" alt="@Model.Course.CourseName" class="w-100">



                            </a>
                        </div>
                        <div class="course-sidebar-text-box">

                            <!-- WISHLIST BUTTON -->
                            <div class="buy-btns">
                                <button class="btn btn-add-wishlist" type="button" id="12" onclick="handleAddToWishlist(this)">
                                    <i class="fa fa-clock" style="margin: 0 7px;font-size: 20px;"></i>التنبيه بأقرب موعد للإنعقاد
                                </button>
                            </div>

                            <div class="buy-btns">

                            </div>


                        </div>
                    </div>
                </div>
                <div class="col-lg-8 radius-10 mt-4 bg-white p-30-40" style="direction: rtl;">
                    <div class="description-box view-more-parent expanded">

                        @Html.Raw(Model.Course.Description)
                    </div>

                    @if (Model.RelatedCourses.Count > 0)
                    {
                        <div>
                            <div style="background-color: #29303b; direction: rtl; color: white; height: 50px; padding: 5px;">
                                <h3>دورات ذات صلة</h3>
                            </div>
                            <div style="direction:rtl">
                                @foreach (BrAcademy.Data.Course RelCourse in Model.RelatedCourses)
                                {
                                    <a asp-action="CourseDetails" asp-route-id="@RelCourse.Id" asp-controller="Courses">
                                        <div style="width:49%;padding:5px;display:inline-block">
                                            <div class="divRelCourse" style="border:1px solid lightgray;border-radius:5px;padding:5px">
                                                <div class="divCourseText" style="display: inline-block; width: 67%; color: #4e4e4e">
                                                    @RelCourse.CourseName
                                                </div>
                                                <div class="divCourseimage" style="display:inline-block;width:30%;padding:5px;vertical-align:top">
                                                    <div style="border:1px solid lightgray;padding:3px">
                                                        <img src="~/images/Courses/@RelCourse.CourseImageUrl" alt="@RelCourse.CourseName" style="width:100%" />
                                                    </div>

                                                </div>

                                            </div>
                                        </div>
                                    </a>
                                }
                            </div>
                        </div>
                    }








