<div class="owl-carousel owl-theme owl-reponsive" id="owlMain">


    @foreach (var item in Model.OwlCarousels)
    {


        @if (item.CustomImageUrl != null)
        {

            <div style="position:relative;text-align:center;">
                <a href="@item.CustomUrl">
                    <img class="imgOwl" src="~/images/OwlCarousels/@item.CustomImageUrl" asp-append-version="true" />
                    <h4 class="owlText d-none d-sm-inline">@item.CustomText</h4>
                    <h4 class="owlTextMobile d-sm-none">@item.CustomText</h4>

